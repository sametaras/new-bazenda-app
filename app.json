{
  "expo": {
    "name": "Bazenda",
    "slug": "bazenda-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bazenda.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Bazenda, ürün aramak için kameranızı kullanmanıza izin verir.",
        "NSPhotoLibraryUsageDescription": "Bazenda, fotoğraf galerinizden ürün aramanıza izin verir.",
        "NSPhotoLibraryAddUsageDescription": "Bazenda, bulunan ürünleri kaydetmenize izin verir.",
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.bazenda.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "POST_NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.bazenda.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Bazenda, ürün aramak için kameranızı kullanmanıza izin verir."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Bazenda, fotoğraf galerinizden ürün aramanıza izin verir."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#f67310",
          "sounds": [],
          "androidMode": "default",
          "androidCollapsedTitle": "Bazenda"
        }
      ]
    ],
    "extra": {
      "releaseChannel": "production"
    },
    "owner": "bazenda",
    "privacy": "public"
  }
}
